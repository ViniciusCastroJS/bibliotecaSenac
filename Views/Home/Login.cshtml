@{
    ViewData["Title"] = "Login";
}
<!--<div class="container">-->
    <div class="row justify-content-md-center mt-5">
        <div class="jumbotron col-6">
            <h1>Bem vindo ao sistema Biblioteca</h1>
            <form asp-action="Login" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="login" class="form-control" name="login" />
                </div>
                <div class="form-group">
                    <input type="password" placeholder="senha" class="form-control" name="senha"/>
                </div>
                <input type="submit" class="btn btn-primary btn-lg" value="Entrar" />
            </form>
            <p class="text-danger">@ViewData["Erro"]</p>
        </div>
    </div>
<!--</div> -->